{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true
  }
}
